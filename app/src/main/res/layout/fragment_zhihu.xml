<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:orientation="vertical">
  <TextView android:id="@+id/tv_zhihu_tag"
      android:layout_width="match_parent" android:layout_height="35dp"
      android:gravity="center_vertical" android:paddingLeft="10dp"
      android:text="今日热闻"/>
  <android.support.v4.widget.SwipeRefreshLayout android:id="@+id/refresh_zhihu"
      android:layout_width="match_parent" android:layout_height="match_parent">
    <android.support.v7.widget.RecyclerView android:id="@+id/recycler_zhihu"
        android:layout_width="match_parent" android:layout_height="wrap_content">
    </android.support.v7.widget.RecyclerView>
  </android.support.v4.widget.SwipeRefreshLayout>

</LinearLayout>