<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:orientation="vertical">

  <android.support.v7.widget.Toolbar android:id="@+id/toolbar_faq"
      android:layout_width="match_parent" android:layout_height="wrap_content">
    <TextView
        android:layout_width="match_parent" android:layout_height="wrap_content"
        android:text="常见问题" android:layout_marginLeft="120dp"
        android:textSize="18sp" android:textColor="@color/black"
        android:textStyle="bold"/>
  </android.support.v7.widget.Toolbar>
  <View
      android:layout_width="match_parent" android:layout_height="1dp"
      android:background="@color/colorGray"/>
  <android.support.v4.widget.SwipeRefreshLayout android:id="@+id/swipe_expandable"
      android:layout_width="match_parent" android:layout_height="match_parent">

    <com.jcodecraeer.xrecyclerview.XRecyclerView android:id="@+id/x_recycler_expandable"
        android:layout_width="match_parent" android:layout_height="wrap_content">
    </com.jcodecraeer.xrecyclerview.XRecyclerView>

  </android.support.v4.widget.SwipeRefreshLayout>
</LinearLayout>