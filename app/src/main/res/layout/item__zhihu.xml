<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_zhihu"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:orientation="vertical" app:cardCornerRadius="2dp"
    android:layout_margin="10dp" android:padding="10dp"
    app:cardElevation="2dp">

  <LinearLayout
      android:layout_width="match_parent" android:layout_height="wrap_content"
      android:orientation="horizontal">

    <TextView android:id="@+id/txt_zhihu_title"
        android:layout_width="0dp" android:layout_weight="1"
        android:layout_height="match_parent" android:padding="2dp"
        android:textColor="@color/textColor" android:gravity="center_vertical"
        android:text="感觉自己布姆的离职率....."/>

    <ImageView android:id="@+id/img_zhihu_daily"
        android:layout_width="75dp" android:layout_height="75dp"
        android:layout_margin="2dp" android:layout_gravity="center_vertical"
        android:src="@mipmap/item2" android:scaleType="centerCrop"/>
  </LinearLayout>

</android.support.v7.widget.CardView>