<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="50dp"
    android:background="#FFFFFF">
  <TextView android:id="@+id/txt_faq_parent"
      android:layout_width="wrap_content" android:layout_height="wrap_content"
      android:layout_marginLeft="10dp" android:layout_marginTop="15dp"
      android:text="" android:textSize="15sp"
      android:textStyle="bold"/>

  <ImageView android:id="@+id/img_arrow_down"
      android:layout_width="wrap_content" android:layout_height="wrap_content"
      android:layout_alignParentRight="true" android:layout_centerVertical="true"
      android:layout_marginRight="16dp"/>
  <View
      android:layout_width="match_parent" android:layout_height="1dp"
      android:background="#333333" android:layout_alignParentBottom="true"/>
</RelativeLayout>

